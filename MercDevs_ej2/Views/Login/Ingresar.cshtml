@model MercDevs_ej2.Models.UsuarioLogin
@{
    ViewData["Title"] = "Ingresar al Sistema";
}

<h1>Inicio de sesión al Sistema Mercy Developer Clientes</h1>

<hr />
<div class="row mt-5 justify-content-center">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-header">
                Iniciar Sesión
            </div>
            <br />
            @if (ViewData["Mensaje"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Mensaje"]
                </div>
            }
            <div class="card-body">
                <form asp-action="Ingresar" method="post">
                    <div>
                        <label for="Correo">Correo</label>
                        <input type="email" id="Correo" name="Correo" required />
                    </div>
                    <div>
                        <label for="Password">Contraseña</label>
                        <input type="password" id="Password" name="Password" required />
                    </div>
                    <div>
                        <button type="submit">Ingresar</button>
                    </div>
                    <div>
                        @if (ViewData["Mensaje"] != null)
                        {
                            <span>@ViewData["Mensaje"]</span>
                        }
                    </div>
                </form>
                <div class="d-grid gap-2">
                    <a href="@Url.Action("Registrar", "Login")" class="btn btn-secondary">Registrarse</a>
                </div>
            </div>
        </div>
    </div>
</div>
