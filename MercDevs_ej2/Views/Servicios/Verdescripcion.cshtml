@model IEnumerable<MercDevs_ej2.Models.Descripcionservicio>

@{
    ViewData["Title"] = "Descripción del Servicio";
}

<h1>Descripción del Servicio: @ViewBag.servicio.Nombre</h1>

<p>
    <a asp-controller="Descripcionservicios" asp-action="Create" asp-route-id="@ViewBag.servicio.IdServicio">
        <button type="button" class="btn btn-success">Agregar Descripción Servicio</button>
    </a>
</p>



<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>SKU</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@ViewBag.servicio.Nombre</th>
                <th>@ViewBag.servicio.Precio.ToString("C")</th>
                <th>@ViewBag.servicio.Sku</th>

                <td>
                    <a asp-controller="Descripcionservicios" asp-action="Edit" asp-route-id="@item.IdDescServ">
                        <button type="button" class="btn btn-primary">Editar</button>
                    </a> |
                    <a asp-controller="Descripcionservicios" asp-action="Details" asp-route-id="@item.IdDescServ">
                        <button type="button" class="btn btn-info">Detalles</button>
                    </a> |
                    <a asp-controller="Descripcionservicios" asp-action="Delete" asp-route-id="@item.IdDescServ">
                        <button type="button" class="btn btn-danger">Borrar</button>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>